<!DOCTYPE html>
<html lang="en" ng-app="AdminApp">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.min.js"></script>
  <script type="text/javascript" src="/js/admin.js"></script>
  <link rel="stylesheet" href="/css/style.css">

  <title></title>
</head>

<body ng-controller="MainController as ctrl">


  <div id="scheduleView" ng-if="ctrl.scheduleView">
    Current Week

    <select>

      <option ng-repeat="week in ctrl.payPeriods"> {{ week.start_date }} </option>

    </select>

    <button ng-click="ctrl.loadWeek(1)">Load Week</button>
    <button ng-click="ctrl.createWeek()">Create Next Week Schedule</button>


    <div id="daySelector">
      View:
      <button ng-click="ctrl.loadDay(0)">Sunday</button>
      <button ng-click="ctrl.loadDay(1)">Monday</button>
      <button ng-click="ctrl.loadDay(2)">Tuesday</button>
      <button ng-click="ctrl.loadDay(3)">Wednesday</button>
      <button ng-click="ctrl.loadDay(4)">Thursday</button>
      <button ng-click="ctrl.loadDay(5)">Friday</button>
      <button ng-click="ctrl.loadDay(6)">Saturday</button>
    </div>


    <div id="employeeSchedules">
      <div ng-repeat="lineItem in ctrl.daySchedules">

        {{ lineItem.employee.first_name }} {{ lineItem.employee.last_name }}

        <div ng-if="lineItem.hasEntry">
          
          <input type="time" ng-model="lineItem.start_time" step="900">
          <input type="time" ng-model="lineItem.end_time" step="900">
          <button ng-click="ctrl.updateEntry(lineItem)">Save Changes</button>
        </div>

        <div ng-if="!lineItem.hasEntry">
          OFF
          <button ng-click="ctrl.addShift(lineItem)">Add Shift</button>
        </div>

      </div>
    </div>


  </div>

  <div id="employeeView" ng-if="!ctrl.scheduleView">

    <form>
      <input type="text" ng-model="ctrl.newUser.first_name" required>
      <input type="text" ng-model="ctrl.newUser.last_name" required>
      <button ng-click="ctrl.createEmployee()">Add New Employee</button>
    </form>

    <div id="employeeList" ng-repeat="employee in ctrl.employees">
      {{ employee.first_name }}
      {{ employee.last_name }}
      <button ng-click="ctrl.deleteEmployee(employee)">Delete</button>
    </div>

  </div>

</body>

</html>